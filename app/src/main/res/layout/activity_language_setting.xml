<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".LanguageSettingActivity">

    <TextView
        android:id="@+id/os_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:elevation="3dp"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="9sp"
        android:text="OS Language"
        android:textColor="@color/yellow"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/os_lang"
        app:layout_constraintTop_toTopOf="@+id/os_lang" />

    <TextView
        android:id="@+id/eng_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:elevation="3dp"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="9sp"
        android:text="English"
        android:textColor="#939495"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/eng"
        app:layout_constraintTop_toTopOf="@+id/eng" />

    <TextView
        android:id="@+id/khmer_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:elevation="3dp"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="9sp"
        android:text="Khmer"
        android:textColor="#939495"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/khmer"
        app:layout_constraintTop_toTopOf="@+id/khmer" />

    <TextView
        android:id="@+id/viet_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:elevation="3dp"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="9sp"
        android:text="Vietnamese"
        android:textColor="#939495"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/viet"
        app:layout_constraintTop_toTopOf="@+id/viet" />

    <TextView
        android:id="@+id/kor_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:elevation="3dp"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="9sp"
        android:text="Korean"
        android:textColor="#939495"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/kor"
        app:layout_constraintTop_toTopOf="@+id/kor" />

    <ImageButton
        android:id="@+id/kor"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/select_off_long"
        android:onClick="korClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viet" />

    <ImageButton
        android:id="@+id/viet"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/select_off_long"
        android:onClick="vietClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/khmer" />

    <ImageButton
        android:id="@+id/khmer"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/select_off_long"
        android:onClick="khmerClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eng" />

    <ImageButton
        android:id="@+id/eng"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/select_off_long"
        android:onClick="engClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/os_lang" />

    <ImageButton
        android:id="@+id/os_lang"
        android:layout_width="368dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/select_on_long"
        android:onClick="osClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/language_back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/background"
            android:onClick="languageFinish"
            android:src="@drawable/ico_arrow_back" />

        <TextView
            android:id="@+id/language_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="9sp"
            android:text="Language Settings"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_tab"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/background"
        app:menu="@menu/bottom_tab_item"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/bottom_item_selector_color"
        app:itemTextColor="@color/bottom_item_selector_color"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>