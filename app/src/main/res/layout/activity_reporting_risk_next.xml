<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ReportingRiskNextActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="72dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="379dp"
                android:layout_height="240dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/report_risk_detail_title" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/add_image_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginBottom="11dp"
                        android:elevation="3dp"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="11sp"
                        android:text="Add image"
                        android:textColor="#3b3b3b"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/imageButton5"
                        app:layout_constraintEnd_toStartOf="@+id/report_detail_edit_count" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="11dp"
                        android:elevation="3dp"
                        android:stateListAnimator="@null"
                        app:layout_constraintBottom_toBottomOf="@+id/imageButton5"
                        app:layout_constraintEnd_toStartOf="@+id/add_image_text"
                        app:srcCompat="@drawable/ico_add_photo_32_px" />

                    <TextView
                        android:id="@+id/report_detail_edit_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp"
                        android:elevation="3dp"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="6sp"
                        android:text="0/1000"
                        android:textColor="#939495"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        app:layout_constraintBottom_toBottomOf="@+id/report_detail_edit"
                        app:layout_constraintEnd_toEndOf="@+id/report_detail_edit" />

                    <EditText
                        android:id="@+id/report_detail_edit"
                        android:layout_width="379dp"
                        android:layout_height="184dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="18dp"
                        android:textSize="18sp"
                        android:letterSpacing="-0.045"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:background="@color/white"
                        android:hint="Detailed risk descriptions are of great help to other users."
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/imageButton5"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="#eaeaea"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/background"
                android:onClick="goRiskReportingActivity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ico_arrow_back" />

            <TextView
                android:id="@+id/reporting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="9sp"
                android:text="Reporting Risk"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/back_button"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/report_risk_detail_title"
                android:layout_width="363dp"
                android:layout_height="37dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="10sp"
                android:text="Please tell us about the details of
risk."
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="#3d414a"
                app:layout_constraintTop_toBottomOf="@+id/report_location_address"
                app:srcCompat="@drawable/div_line"
                tools:layout_editor_absoluteX="-25dp" />

            <TextView
                android:id="@+id/report_location_address"
                android:layout_width="363dp"
                android:layout_height="54dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="9sp"
                android:text="서울특별시 서대문구 신촌동 이화여대길 52
이화여자대학교 대학원"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/report_location_title" />

            <TextView
                android:id="@+id/report_location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="8sp"
                android:text="Location"
                android:textColor="#939495"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reporting_search_button" />

            <TextView
                android:id="@+id/report_search_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="23dp"
                android:elevation="3dp"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="9sp"
                android:text="Search"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/circle2"
                app:layout_constraintTop_toTopOf="@+id/reporting_search_button" />

            <TextView
                android:id="@+id/current_location_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="23dp"
                android:elevation="3dp"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="9sp"
                android:text="Current location"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/circle1"
                app:layout_constraintTop_toTopOf="@+id/current_location_button" />

            <ImageView
                android:id="@+id/circle2"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/dark_circle"
                android:elevation="3dp"
                app:layout_constraintStart_toStartOf="@+id/reporting_search_button"
                app:layout_constraintTop_toTopOf="@+id/reporting_search_button" />

            <ImageView
                android:id="@+id/search_img"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="23dp"
                android:elevation="5dp"
                app:layout_constraintStart_toStartOf="@+id/reporting_search_button"
                app:layout_constraintTop_toTopOf="@+id/reporting_search_button"
                app:srcCompat="@drawable/ico_search_off" />

            <ImageView
                android:id="@+id/mark_img"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="23dp"
                android:elevation="5dp"
                app:layout_constraintStart_toStartOf="@+id/current_location_button"
                app:layout_constraintTop_toTopOf="@+id/current_location_button"
                app:srcCompat="@drawable/ico_current_location_on" />

            <ImageView
                android:id="@+id/circle1"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/dark_circle"
                android:elevation="3dp"
                app:layout_constraintStart_toStartOf="@+id/current_location_button"
                app:layout_constraintTop_toTopOf="@+id/current_location_button" />


            <TextView
                android:id="@+id/enter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="33dp"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="9sp"
                android:text="Please enter the risk name"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reporting_title" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="379dp"
                android:layout_height="72dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_corner"
                android:ems="10"
                android:hint="Risk name"
                android:inputType="textPersonName"
                android:paddingLeft="16dp"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enter_title" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:background="#3d414a"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
                app:srcCompat="@drawable/div_line" />

            <TextView
                android:id="@+id/enter_location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="9sp"
                android:text="Enter the location"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <ImageButton
                android:id="@+id/current_location_button"
                android:layout_width="379dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/round_corner_dark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enter_location_title" />

            <ImageButton
                android:id="@+id/reporting_search_button"
                android:layout_width="379dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/round_corner_dark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/current_location_button" />

            <ImageButton
                android:id="@+id/report_go_next_button"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="304dp"
                android:background="@color/yellow"
                app:layout_constraintTop_toBottomOf="@+id/report_risk_detail_title" />

            <TextView
                android:id="@+id/report_go_next_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:letterSpacing="-0.06"
                android:text="Next"
                android:textColor="#222222"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/report_go_next_button"
                app:layout_constraintStart_toStartOf="@+id/report_go_next_button"
                app:layout_constraintTop_toTopOf="@+id/report_go_next_button" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>